{
  "Jwt": {
    //I store the secret key for jwt authentication at secrets.json .
    "Issuer": "https://localhost:7266",
    "Audience": "https://localhost:7266",
    "ExpireMinutes": 30,
    "RefreshTokenExpireDays": 7
  },
  "LoanSettings": {
    "DueDays": 30,
    "LoansLimit": 5
  },
  "FrontendUrl": "https://your-frontend-app.com",
  "EmailSettings": {
    "SmtpServer": "smtp.LibraryManagementSystem.com",
    "SmtpPort": 587
  },
  "CacheSettings": {
    "ExpirationMinutes": 10
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*", // Applies to all endpoints
        "Period": "5m", // 5 seconds
        "Limit": 3 // 3 requests
      }
    ]
  }

}
